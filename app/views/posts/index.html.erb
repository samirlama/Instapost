<!DOCTYPE html>
<html>
<head>
	<title>Instapost</title>
</head>
<body>
	<div class="container ">
		<% @posts.each do |post| %>
		<div class="row">
			<div class="col-md-3"></div>
			<div class="col-md-6">
				<div class="panel panel-default">
    				<div class="panel-heading">
    					<%= image_tag post.user.photo, :style=>"width:50px; height:50px;" %>&nbsp  Sameer Lama <span style="float: right; margin:10px 5px 0 0;"><%= link_to 'Edit' , edit_post_path(post.id) %>&nbsp&nbsp&nbsp<%= link_to 'Delete' , post_path(post.id) , method: :destroy %></span>
    				</div>
   				    <div class="panel-body">
    					<div class="row">
							<div class="col-md-6">
								<div class="thumbnail" style="margin:0 auto; border:none; ">
									<%= image_tag post.photo %>
									<div class="caption">
										<p style="border-bottom:1px solid #e5e5e5; padding-bottom:5px"><%= post.description %></p>
										<section>12 likes</section>
										<a href="#"><i class="fa fa-heart-o" style="font-size:28px; color:#b9b9b9;"></i></a>
								&nbsp&nbsp&nbsp
										<a href="#"><i class="fa fa-comment-o" style="font-size:30px; color:#b9b9b9;"></i></a>
									</div>
								</div>
							</div>
						</div>	
    				</div>
    				<div class="panel-footer">
    					Add Comments
    				</div>
  				</div>
			</div>
		</div>
		<% end %>
	</div>	
</body>
</html>